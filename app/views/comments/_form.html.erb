  <% if current_user %>
  <h4> Add comment </h4>
  <%= form_for [topic, post, post.comments.new] %> do |f| %>
  <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter a comment" %>
      <%= f.submit "Add Comment", class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>



